%% HW #3
p = 0.5;
f=@(p,k) (k ==1).*p + (k==0).*(1-p);
pmf_v = f(p,[0 1]);
cdf_v = cumsum(pmf_v);

sample = 100000;

%% n=5
len = 2500;
x = linspace(0,5,len);

emp_x = zeros(5, sample);
for idx = 1:5
    U = rand(1,sample);
    emp_x(idx,:) = U>cdf_v(1);
end

emp_sum = sum(emp_x);
N= histcounts(emp_sum, x);
